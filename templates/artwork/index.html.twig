{% extends 'base.html.twig' %}

{% block title %}Artworks{% endblock %}

{% block body %}
<div class="pink-stripe">
	<h1 class="bienvenue">Plongez dans mon univers</h1>
</div>
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img src="{{ asset('build/images/dragon.jpg')}}" class="d-block w-100" alt="...">
		</div>
		<div class="carousel-item">
			<img src="{{ asset('build/images/strange.png')}}" class="d-block w-100" alt="...">
		</div>
		<div class="carousel-item">
			<img src="{{ asset('build/images/4.jpg')}}" class="d-block w-100" alt="...">
		</div>
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>



{% for artwork in artworks %}
<section class=" py-5 py-xl-6">
<div class="container overflow-hidden">
	<div class="row gy-3 g-md-3 hcf-isotope-grid">
		<div class="col-12 col-md-6 col-lg-3 hcf-isotope-item">
			<a class="hcf-masonry-card rounded rounded-4" href="#!">
				<img class="card-img img-fluid" loading="lazy" src="{{ vich_uploader_asset(artwork) }}" alt="">
				<div class="card-overlay d-flex flex-column justify-content-center bg-dark p-4" style="--bs-bg-opacity: .5;">
					<h3 class="card-title text-white text-center mb-1">{{ artwork.name }}</h3>
					<div class="card-category text-white text-center">Photography</div>
				</div>
			</a>
		</div>
    </div>
</div>
</section>
        
        {% if app.user %}
            <tr class="td-list">
                <td class="td-list">{{ artwork.description }}</td>
                <td class="td-list">
                    
                        <a href="{{ path('app_artwork_show', {'id': artwork.id}) }}">Voir l'Oeuvre</a>
                        &nbsp;
                        <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="td-list" colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
        <a href="{{ path('app_artwork_new') }}">Cr√©er une nouvelle Oeuvre</a>
    {% endif %}
{% endblock %}
